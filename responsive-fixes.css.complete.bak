/* AeroVista - Responsive Fixes and Improvements 
   These styles complement the main CSS and improve mobile layout and accessibility
*/

/* Global fix to prevent horizontal scrolling on mobile devices */
html, body {
  max-width: 100%;
  overflow-x: hidden;
}

/* Mobile and Tablet Breakpoint Handling */
@media (max-width: 768px) {
  /* Touch-based navigation prevention */
  html {
    touch-action: pan-y; /* Only allow vertical scrolling/panning */
    overflow-x: hidden;
  }
  
  body {
    overflow-x: hidden; /* Prevent horizontal scrolling */
    position: relative; /* Establish positioning context */
    width: 100%; /* Ensure body doesn't exceed viewport */
  }
  
  /* Prevent horizontal overflow from child elements */
  main, section, div, header, footer {
    max-width: 100%;
    box-sizing: border-box;
  }
  
  /* Improved navigation experience */
  header {
    padding: var(--space-xs) var(--space-sm);
  }
  
  .menu-toggle {
    display: flex;
  }
  
  nav {
    position: fixed;
    top: 60px;
    right: -100%;
    width: 80%;
    max-width: 320px;
    height: calc(100vh - 60px);
    background: var(--glass-bg);
    backdrop-filter: blur(var(--glass-blur));
    flex-direction: column;
    align-items: flex-start;
    padding: var(--space-md);
    transition: right var(--transition-medium) var(--easing-standard);
    z-index: var(--z-modal);
  }
  
  nav.nav-open {
    right: 0;
  }
  
  nav a {
    margin: var(--space-xs) 0;
    padding: var(--space-sm);
    width: 100%;
  }
  
  /* Main content spacing */
  main {
    padding-top: 60px;
  }
  
  /* Container sizing */
  .container {
    padding-left: var(--space-sm);
    padding-right: var(--space-sm);
  }
  
  /* Banner adjustments */
  .container.banner {
    padding: var(--space-lg) var(--space-sm);
    margin-top: var(--space-md);
    margin-bottom: var(--space-md);
  }
  
  .container.banner h2 {
    font-size: var(--font-size-xl);
    margin: var(--space-sm) auto var(--space-md);
  }
  
  /* Hero section mobile optimization */
  .hero {
    padding: var(--space-lg) var(--space-sm);
    text-align: center;
  }
  
  .hero h1 {
    margin-bottom: var(--space-sm);
  }
  
  .hero p {
    font-size: var(--font-size-base);
    margin-bottom: var(--space-md);
  }
  
  .hero .flex {
    flex-direction: column;
    width: 100%;
    gap: var(--space-xs);
  }
  
  .hero .btn {
    width: 100%;
    max-width: 280px;
    margin: 0 auto;
  }
  
  /* CTA section responsiveness */
  .cta-section {
    padding: var(--space-lg) var(--space-sm);
  }
  
  .cta-grid {
    flex-direction: column;
  }
  
  .cta-content, .cta-visual {
    width: 100%;
  }
  
  .cta-visual {
    margin-top: var(--space-lg);
    height: 200px;
  }
  
  /* Feature items adjustment */
  .feature-item {
    flex-direction: column;
    text-align: center;
    margin-bottom: var(--space-md);
  }
  
  .feature-icon {
    margin-bottom: var(--space-xs);
    margin-right: 0;
  }
  
  /* Contact form spacing */
  #contact form {
    padding: var(--space-md);
  }
  
  /* Footer layout */
  .footer-grid {
    grid-template-columns: 1fr;
    gap: var(--space-md);
  }
  
  .footer-brand, .footer-links {
    width: 100%;
    text-align: center;
  }
}

/* Small mobile breakpoint */
@media (max-width: 480px) {
  /* Typography scaling */
  h1 {
    font-size: var(--font-size-3xl);
  }
  
  h2 {
    font-size: var(--font-size-2xl);
  }
  
  h3 {
    font-size: var(--font-size-xl);
  }
  
  .container.banner h2 {
    font-size: var(--font-size-lg);
  }
  
  p {
    font-size: var(--font-size-base);
  }
  
  /* Button sizing */
  .btn {
    padding: var(--space-xs) var(--space-md);
    font-size: var(--font-size-sm);
  }
  
  /* Extreme space constraints */
  .container {
    padding-left: var(--space-xs);
    padding-right: var(--space-xs);
  }
  
  /* Footer optimizations */
  .footer-bottom {
    padding: var(--space-sm) var(--space-xs);
    font-size: var(--font-size-xs);
  }
}

/* Medium screens */
@media (min-width: 769px) and (max-width: 1024px) {
  /* Refined middle-ground layout */
  .container {
    padding-left: var(--space-md);
    padding-right: var(--space-md);
  }
  
  .footer-grid {
    grid-template-columns: 2fr 1fr 1fr;
  }
  
  /* More room for content */
  .cta-grid {
    gap: var(--space-md);
  }
  
  .feature-item {
    margin-bottom: var(--space-sm);
  }
}

/* Input elements consistency */
input, textarea, select {
  font-size: var(--font-size-base);
  padding: var(--space-sm);
  border-radius: var(--radius-sm);
  border: 1px solid var(--color-border);
}

input:focus, textarea:focus, select:focus {
  outline: none;
  border-color: var(--color-accent);
  box-shadow: 0 0 0 2px var(--color-focus-ring);
}

/* Accessibility: Skip to content link */
/* Commented out problematic line 242: .skip-to-content { */
section h1 { font-size: 2rem; margin-bottom: 1rem; line-height: 1.2; }
  background: var(--color-accent);
  color: var(--color-bg);
  padding: var(--space-sm);
  position: absolute;
  left: -9999px;
  z-index: var(--z-max);
  text-decoration: none;
  font-weight: var(--font-weight-medium);
  border-radius: 0 0 var(--radius-sm) 0;
  transition: transform var(--transition-fast) var(--easing-decelerate);
}

.skip-to-content:focus {
  left: 0;
  transform: translateY(0);
  outline: none;
}

/* Respect user preferences for reduced motion */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.001s !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.001s !important;
    scroll-behavior: auto !important;
  }
  
  .glitch::before,
  .glitch::after {
    display: none !important;
  }
}

/* Emoji label styling for improved readability */
.emoji-label {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
}

.emoji-label .emoji {
  font-size: 1.5em;
  line-height: 1;
}

/* Screen reader only text */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* Focus styles for accessibility */
a:focus, button:focus {
  outline: none;
  box-shadow: 0 0 0 3px var(--color-focus-ring);
  position: relative;
  z-index: var(--z-above);
}

/* Responsive Menu Toggle Button */
.menu-toggle {
  display: none;
  flex-direction: column;
  justify-content: space-between;
  width: 30px;
  height: 24px;
  cursor: pointer;
  z-index: var(--z-sticky);
  background: transparent;
  border: none;
  padding: 0;
}

.menu-toggle span {
  display: block;
  width: 100%;
  height: 3px;
  background: var(--color-text);
  border-radius: var(--radius-pill);
  transition: transform var(--transition-fast) var(--easing-standard), 
              opacity var(--transition-fast) var(--easing-standard);
}

.menu-toggle.active span:nth-child(1) {
  transform: translateY(10px) rotate(45deg);
}

.menu-toggle.active span:nth-child(2) {
  opacity: 0;
}

.menu-toggle.active span:nth-child(3) {
  transform: translateY(-10px) rotate(-45deg);
}

/* Image loading visual indicator */
img[data-src] {
  opacity: 0;
  transition: opacity var(--transition-medium) var(--easing-standard);
}

img[data-src].loaded {
  opacity: 1;
}

/* Glitch styles - Note: animations now in theme-classes.css */
.glitch {
  position: relative;
  transition: all 0.3s ease;
  z-index: 2; /* Ensure text is above decorative elements */
}

.glitch::before,
.glitch::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: -1; /* Keep these below the main text */
  pointer-events: none; /* Prevent interaction with these layers */
}

.glitch:hover::before,
.glitch:hover::after {
  opacity: 0.8;
}

.glitch:hover::before {
  animation: glitch-animation 0.4s linear 2;
  color: var(--color-hot);
  z-index: -1;
}

.glitch:hover::after {
  animation: glitch-animation 0.4s linear reverse 2;
  color: var(--color-accent);
  z-index: -2;
}

/* Initial page load glitch effect */
.body-loaded .glitch {
  animation: glitch-animation-once 1s linear;
}

/* Updated styles for text gradient in banner */
.container.banner .text-gradient {
  position: relative;
  z-index: 2; /* Ensure text stays above decorative elements */
}

/* Different hover effect for banner heading */
.container.banner h2.glitch:hover::before {
  animation: glitch-small 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
  color: var(--color-hot);
  opacity: 0.7;
  z-index: -2;
}

.container.banner h2.glitch:hover::after {
  animation: glitch-small 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) reverse both infinite;
  color: var(--color-accent);
  opacity: 0.7;
  z-index: -1;
}

/* Mobile button styles */
@media (max-width: 480px) {
  .btn {
    width: 100%;
    display: block;
    margin-bottom: 0.5rem;
  }
  
  .btn + .btn {
    margin-left: 0;
  }
}

/* Image Loading Shimmer Animation */
img[data-src] {
  background: linear-gradient(90deg, #121212 25%, #1a1a1a 50%, #121212 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

/* Style update for emoji with text for accessibility */
.emoji-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.emoji-label .emoji {
  font-size: 1.2em;
}

/* Screen reader only text */
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* Add focus styles for keyboard navigation */
a:focus, button:focus {
  outline: 2px solid var(--color-accent);
  outline-offset: 2px;
} 