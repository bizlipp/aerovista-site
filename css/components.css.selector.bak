/* components.css */
/* Reusable UI components like buttons, cards, navbars, etc. */

/* ==================== Buttons ==================== */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.75rem 1.5rem;
  background: var(--color-accent);
  color: var(--color-surface);
  border-radius: var(--radius-base);
  font-weight: var(--font-weight-medium);
  font-family: var(--font-heading);
  letter-spacing: 0.02em;
  text-align: center;
  text-decoration: none;
  white-space: nowrap;
  transition: all var(--transition-medium) var(--easing-standard);
  position: relative;
  overflow: hidden;
  border: none;
  cursor: pointer;
  z-index: 1;
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  transform: scaleX(0);
  transform-origin: right;
  transition: transform var(--transition-medium) var(--easing-standard);
  z-index: -1;
}

.btn:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-hover);
}

.btn:hover::before {
  transform: scaleX(1);
  transform-origin: left;
}

.btn:active {
  transform: translateY(1px);
}

.btn.alt {
  background: var(--color-hot);
}

.btn.outline {
  background: transparent;
  border: 1px solid var(--color-accent);
  color: var(--color-accent);
}

.btn.outline:hover {
  background: var(--color-accent);
  color: var(--color-surface);
}

.btn.secondary {
  background: var(--color-secondary);
}

.btn.text {
  background: transparent;
  padding: 0.5rem 0.75rem;
  color: var(--color-accent);
}

.btn.text:hover {
  background: rgba(0, 210, 255, 0.1);
  transform: translateY(0);
  box-shadow: none;
}

.btn.sm {
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
}

.btn.lg {
  padding: 1rem 2rem;
  font-size: 1.125rem;
}

.btn.icon {
  width: 2.5rem;
  height: 2.5rem;
  padding: 0;
  border-radius: 50%;
}

.btn.icon.sm {
  width: 2rem;
  height: 2rem;
}

.btn.icon.lg {
  width: 3rem;
  height: 3rem;
}

.btn-group {
  display: flex;
  gap: 0.5rem;
}

/* ==================== Cards ==================== */
.card {
  background: var(--glass-bg);
  backdrop-filter: blur(var(--glass-blur));
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-base);
  padding: 1.5rem;
  transition: all var(--transition-medium) var(--easing-standard);
  position: relative;
  overflow: hidden;
}

.card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-card);
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4px;
  background: var(--gradient-primary);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform var(--transition-medium) var(--easing-standard);
}

.card:hover::before {
  transform: scaleX(1);
}

.card.hot::before {
  background: var(--gradient-hot);
}

.card.solid {
  background: var(--color-card);
  backdrop-filter: none;
}

.card-header {
  margin-bottom: 1rem;
}

.card-footer {
  margin-top: 1.5rem;
  padding-top: 1rem;
  border-top: 1px solid var(--glass-border);
}

.card-image {
  margin: -1.5rem -1.5rem 1.5rem -1.5rem;
  position: relative;
  overflow: hidden;
  border-radius: var(--radius-base) var(--radius-base) 0 0;
}

.card-image img {
  width: 100%;
  height: auto;
  transition: transform var(--transition-medium) var(--easing-standard);
}

.card:hover .card-image img {
  transform: scale(1.05);
}

.card-title {
  font-family: var(--font-heading);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  margin-bottom: 0.75rem;
}

/* ==================== Navigation ==================== */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem 2rem;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: var(--z-sticky);
  transition: all var(--transition-medium) var(--easing-standard);
  backdrop-filter: blur(var(--glass-blur));
  background: rgba(8, 10, 18, 0.8);
}

.navbar.scrolled {
  padding: 1rem 2rem;
  background: rgba(8, 10, 18, 0.95);
  box-shadow: var(--shadow-soft);
}

.navbar-brand {
  font-family: var(--font-heading);
  font-weight: var(--font-weight-bold);
  font-size: 1.5rem;
  text-decoration: none;
  color: var(--color-text);
}

.navbar-brand strong {
  position: relative;
  font-weight: var(--font-weight-bold);
}

.navbar-nav {
  display: flex;
  align-items: center;
  gap: 2rem;
}

.navbar-nav a {
/* Fixed: position: relative; */
/* Fixed: color: var(--color-text); */
/* Fixed: text-decoration: none; */
/* Fixed: font-weight: var(--font-weight-medium); */
/* Fixed: transition: color var(--transition-medium) var(--easing-standard); */
/* Fixed: removed orphaned brace */

/* Fixed: .navbar-nav a::after */ .fixed-css-line-244 {
/* Fixed: content: ''; */
/* Fixed: position: absolute; */
/* Fixed: bottom: -0.5rem; */
  left: 0;
  width: 100%;
  height: 2px;
  background: var(--color-accent);
  transform: scaleX(0);
  transform-origin: right;
  transition: transform var(--transition-medium) var(--easing-standard);
}

.navbar-nav a:hover,
.navbar-nav a.active {
  color: var(--color-accent);
}

.navbar-nav a:hover::after,
.navbar-nav a.active::after {
  transform: scaleX(1);
  transform-origin: left;
}

.navbar-toggle {
  display: none;
  flex-direction: column;
  justify-content: space-between;
  width: 2rem;
  height: 1.5rem;
  cursor: pointer;
  z-index: var(--z-overlay);
}

.navbar-toggle span {
  width: 100%;
  height: 2px;
  background: var(--color-text);
  border-radius: 5px;
  transition: all var(--transition-medium) var(--easing-standard);
}

@media (max-width: 768px) {
  .navbar-toggle {
    display: flex;
  }
  
  .navbar-nav {
    position: fixed;
    top: 0;
    right: -100%;
    bottom: 0;
    width: 70%;
    padding: 5rem 2rem;
    background: var(--color-surface);
    flex-direction: column;
    align-items: flex-start;
    transition: right var(--transition-medium) var(--easing-standard);
    box-shadow: var(--shadow-card);
  }
  
  .navbar-nav.open {
    right: 0;
  }
  
  .navbar-toggle.active span:nth-child(1) {
    transform: translateY(10px) rotate(45deg);
  }
  
  .navbar-toggle.active span:nth-child(2) {
    opacity: 0;
  }
  
  .navbar-toggle.active span:nth-child(3) {
    transform: translateY(-10px) rotate(-45deg);
  }
}

/* ==================== Footer ==================== */
.footer {
  background: var(--color-surface);
  padding: 4rem 0 2rem;
  position: relative;
  overflow: hidden;
}

.footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(
    to right,
    transparent,
    var(--color-accent),
    var(--color-hot),
    transparent
  );
}

.footer-logo {
  font-family: var(--font-heading);
  font-weight: var(--font-weight-bold);
  font-size: 1.75rem;
  margin-bottom: 1rem;
}

.footer-grid {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1fr;
  gap: 3rem;
}

.footer-brand p {
  color: var(--color-text-soft);
  max-width: 25rem;
  margin-bottom: 2rem;
}

.footer-heading {
  font-family: var(--font-heading);
  font-weight: var(--font-weight-bold);
  font-size: 1.25rem;
  margin-bottom: 1.5rem;
}

.footer-links {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.footer-links a {
  color: var(--color-text-soft);
  text-decoration: none;
  transition: color var(--transition-fast) var(--easing-standard);
}

.footer-links a:hover {
  color: var(--color-accent);
}

.footer-bottom {
  margin-top: 3rem;
  padding-top: 1.5rem;
  border-top: 1px solid var(--glass-border);
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--color-text-soft);
  font-size: 0.875rem;
}

.footer-social {
  display: flex;
  gap: 1rem;
}

.footer-social a {
  color: var(--color-text-soft);
  transition: color var(--transition-fast) var(--easing-standard);
}

.footer-social a:hover {
  color: var(--color-accent);
}

@media (max-width: 768px) {
  .footer-grid {
    grid-template-columns: 1fr 1fr;
  }
  
  .footer-brand {
    grid-column: 1 / -1;
  }
}

@media (max-width: 480px) {
  .footer-grid {
    grid-template-columns: 1fr;
  }
  
  .footer-bottom {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }
}

/* ==================== Badges ==================== */
.badge {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  font-size: 0.75rem;
  font-weight: var(--font-weight-medium);
  border-radius: var(--radius-pill);
  background: var(--color-accent-transparent);
  color: var(--color-accent);
}

.badge.secondary {
  background: var(--color-secondary-transparent);
  color: var(--color-secondary);
}

.badge.hot {
  background: var(--color-hot-transparent);
  color: var(--color-hot);
}

.badge.success {
  background: rgba(5, 214, 158, 0.2);
  color: var(--color-success);
}

.badge.warning {
  background: rgba(255, 179, 71, 0.2);
  color: var(--color-warning);
}

.badge.error {
  background: rgba(255, 69, 87, 0.2);
  color: var(--color-error);
}

/* ==================== Forms ==================== */
.form-group {
  margin-bottom: 1.5rem;
}

.form-label {
  display: block;
  margin-bottom: 0.5rem;
  color: var(--color-text-soft);
  font-weight: var(--font-weight-medium);
  font-size: 0.875rem;
}

.form-control {
  display: block;
  width: 100%;
  padding: 0.75rem 1rem;
  font-size: 1rem;
  font-family: var(--font-body);
  background: var(--glass-bg);
  color: var(--color-text);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-base);
  transition: all var(--transition-fast) var(--easing-standard);
}

.form-control:focus {
  outline: none;
  border-color: var(--color-accent);
  box-shadow: 0 0 0 3px var(--color-focus-ring);
}

.form-control::placeholder {
  color: var(--color-text-muted);
}

textarea.form-control {
  min-height: 120px;
  resize: vertical;
}

.form-check {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.75rem;
}

.form-check-input {
  appearance: none;
  width: 1.25rem;
  height: 1.25rem;
  background: var(--glass-bg);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-sm);
  transition: all var(--transition-fast) var(--easing-standard);
  position: relative;
  cursor: pointer;
}

.form-check-input:checked {
  background: var(--color-accent);
  border-color: var(--color-accent);
}

.form-check-input:checked::before {
  content: 'âœ“';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: var(--color-surface);
  font-size: 0.75rem;
}

.form-check-label {
  cursor: pointer;
}

/* Form validation styles */
.form-control.is-invalid {
  border-color: var(--color-error);
}

.invalid-feedback {
  display: block;
  margin-top: 0.25rem;
  font-size: 0.875rem;
  color: var(--color-error);
}

/* ==================== Alerts ==================== */
.alert {
  padding: 1rem 1.5rem;
  border-radius: var(--radius-base);
  margin-bottom: 1.5rem;
  position: relative;
}

.alert-success {
  background: rgba(5, 214, 158, 0.1);
  border-left: 4px solid var(--color-success);
  color: var(--color-success);
}

.alert-warning {
  background: rgba(255, 179, 71, 0.1);
  border-left: 4px solid var(--color-warning);
  color: var(--color-warning);
}

.alert-error {
  background: rgba(255, 69, 87, 0.1);
  border-left: 4px solid var(--color-error);
  color: var(--color-error);
}

.alert-info {
  background: rgba(0, 210, 255, 0.1);
  border-left: 4px solid var(--color-accent);
  color: var(--color-accent);
}

/* ==================== Progress ==================== */
.progress {
  height: 0.5rem;
  background: var(--glass-bg);
  border-radius: var(--radius-pill);
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: var(--gradient-primary);
  transition: width var(--transition-slow) var(--easing-decelerate);
}

/* ==================== Tooltips ==================== */
.tooltip {
  position: relative;
}

.tooltip::after {
  content: attr(data-tooltip);
  position: absolute;
  bottom: 125%;
  left: 50%;
  transform: translateX(-50%);
  padding: 0.5rem 0.75rem;
  background: var(--color-surface);
  color: var(--color-text);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  white-space: nowrap;
  opacity: 0;
  visibility: hidden;
  transition: all var(--transition-fast) var(--easing-standard);
  z-index: var(--z-tooltip);
  box-shadow: var(--shadow-card);
}

.tooltip:hover::after {
  opacity: 1;
  visibility: visible;
}

/* ==================== Dividers ==================== */
.divider {
  height: 1px;
  background: var(--glass-border);
  margin: 2rem 0;
}

.divider-vertical {
  width: 1px;
  height: 100%;
  background: var(--glass-border);
  margin: 0 2rem;
}
