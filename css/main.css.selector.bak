/*
 * AeroVista - Main CSS
 * This is the main entry point for all CSS styles
 * Imports all modular CSS files in the correct cascade order
 */

/* 1. Variables and Foundations */
@import 'variables.css';
@import 'base.css';

/* 2. Layout and Grid Systems */
@import 'layout.css';
@import 'utilities.css';

/* 3. Components and UI Elements */
@import 'components.css';
@import 'animations.css';
@import 'animation-controls.css';

/* 4. Accessibility and Performance */
@import 'accessibility.css';
@import 'performance.css';

/* 5. Page-specific styles */
@import 'pages/index.css';
@import 'pages/divisions.css';
@import 'pages/apps.css';
@import 'pages/about.css';

/* 6. Division-specific styles */
@import 'divisions/base.css';
@import 'divisions/lumina-creative.css';
@import 'divisions/skyforge-creative.css';

/* 7. App-specific styles */
@import 'apps/base.css';
@import 'apps/memflow.css';
@import 'apps/warpsync.css';

/*
 * How to use this system:
 * 
 * 1. All global variables are in variables.css
 * 2. Base elements (html, body, h1-h6, etc.) are in base.css
 * 3. Layout components (container, grid, etc.) are in layout.css
 * 4. Utility classes (.flex, .hidden, etc.) are in utilities.css
 * 5. UI components (buttons, cards, etc.) are in components.css
 * 6. Animations and transitions are in animations.css
 * 7. Animation controls for accessibility are in animation-controls.css
 * 8. Accessibility features are in accessibility.css
 * 9. Performance optimizations are in performance.css
 * 10. Page-specific styles are in the pages/ directory
 * 11. Division-specific styles are in the divisions/ directory
 * 12. App-specific styles are in the apps/ directory
 */ 